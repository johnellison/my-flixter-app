<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <%= link_to root_path, class: "logo" do %>
      <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png" alt="Logo Image">
    <% end %>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
      <% if user_signed_in? %>
        <li class="nav-link">
          <%= link_to 'Dashboard', dashboard_path %>
        </li>
      <% end %>
        <li class="nav-link"><%= link_to 'Courses', courses_path %></li>
        <li class="nav-link"><a href="javascript:void(0)">About Us</a></li>
        <li class="nav-link"><a href="javascript:void(0)">Contact</a></li>
      </ul>
    </nav>
    <div class="navigation-tools">
      <% if user_signed_in? %>
        <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'log-out' %>
      <% else %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'sign-up' %>
        <%= link_to 'Log In', new_user_session_path, class: 'log-in' %>
        <p>
          or
        </p>
      <% end %>
    </div>
  </div>
</header>
