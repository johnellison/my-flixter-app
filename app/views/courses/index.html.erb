<div class="courses-index-wrapper">
  <div class="courses-index-content">
    <h1>Launch Your Freelance Freedom</h1>
    <ul class="course-list">
      <% @courses.each do |course| %>
        <li class="course-card">
          <h2 class="course-card--title"><%= link_to course.title, course_path(course) %></h2>
          <%= image_tag course.image %>
          <p class="course-card--description"><%= truncate(course.description, length: 150) %></p>
          <%= link_to 'View Course', course_path(course), class: 'button' %>
        </li>
      <% end %>
    </ul>
    
  </div>
</div>
