<div class="show-course-wrapper">
  <div class="show-course-content">
    <!-- Course Info -->
    <%= render 'courses/info' %>

    <!-- Preview as student -->
    <div class="teacher-panel-wrapper">
        <%= link_to 'Preview Course as a Student', course_path(@course), class: 'button secondary' %>
    </div>

    <hr>

    <!-- List Course Sections -->
    <%= render partial: 'courses/sections', locals: { include_add_lesson: true } %>

    <!-- Add a section to this course -->
    <%= link_to 'Add Section', new_teacher_course_section_path(@course), class: 'button secondary' %>

  </div>
</div>